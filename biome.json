{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "src/**",
      "./next.config.ts",
      "./drizzle.config.ts",
      "./lint-staged.config.js",
      "!src/hooks/use-mobile.ts",
      "!src/components/ui",
      "!!**/.next",
      "!!**/node_modules"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useImportExtensions": "off"
      },
      "style": {
        "useConsistentCurlyBraces": "error",
        "noImplicitBoolean": "error",
        "useConsistentTypeDefinitions": {
          "options": {
            "style": "type"
          },
          "level": "error"
        }
      },
      "nursery": {
        "useSortedClasses": "error"
      },
      "suspicious": {
        "noConsole": "error"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended",
      "test": "recommended",
      "project": "recommended"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              {
                "type": true
              },
              ":NODE:",
              ":PACKAGE:",
              ":BLANK_LINE:",
              ["@public/**"],
              ":BLANK_LINE:",
              "@/**",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
