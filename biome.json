{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "src/**",
      "resources/data/**",
      "./vite.config.ts",
      "./drizzle.config.ts",
      "./lint-staged.config.js",
      "!src/hooks/use-mobile.ts",
      "!src/components/ui",
      "!src/components/animate-ui",
      "!src/components/smoothui",
      "!src/routeTree.gen.ts",
      "!!**/.tanstack",
      "!!./nitro",
      "!!./dist",
      "!!**/node_modules"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "lineWidth": 110
  },
  "overrides": [
    {
      "includes": ["src/**/*"],
      "linter": {
        "enabled": true,
        "rules": {
          "recommended": true,
          "performance": {
            "noNamespaceImport": "off"
          },
          "style": {
            "useFilenamingConvention": "off",
            "noNonNullAssertion": "warn",
            "useConsistentCurlyBraces": "error"
          }
        }
      }
    },
    {
      "includes": ["src/**/*.ts", "src/**/*.tsx"],
      "assist": {
        "enabled": true,
        "actions": {
          "source": {
            "organizeImports": {
              "level": "on",
              "options": {
                "groups": [
                  {
                    "type": true
                  },
                  ":NODE:",
                  ":PACKAGE:",
                  ":BLANK_LINE:",
                  ["@public/**"],
                  ":BLANK_LINE:",
                  "@/**",
                  ":BLANK_LINE:",
                  ":PATH:"
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/app/*.css"],
      "css": {
        "parser": {
          "tailwindDirectives": true
        }
      }
    }
  ],
  "extends": [
    "ultracite/biome/core",
    "ultracite/biome/react",
    "ultracite/biome/remix"
  ]
}
